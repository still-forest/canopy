{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "extends": ["@still-forest/biomejs-config"],
  "linter": {
    "rules": {
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "a11y": {
        "useSemanticElements": "warn",
        "useValidAnchor": "warn",
        "noSvgWithoutTitle": "warn",
        "noLabelWithoutControl": "warn"
      },
      "correctness": {
        "noNestedComponentDefinitions": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": "off"
      }
    }
  }
}
